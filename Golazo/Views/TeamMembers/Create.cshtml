@model Golazo.Models.TeamMember

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>Team Member</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-group">
        @Html.LabelFor(model => model.TeamId, htmlAttributes: new { @class = "col-md-2" })
        <div class="col-md-10">
            @Html.TextBoxFor(model => model.TeamId, new { htmlAttributes = new { @class = "form-control" },  @readonly = "readonly" })
            @Html.ValidationMessageFor(model => model.TeamId, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.TeamName, htmlAttributes: new { @class = " col-md-2" })
        <div class="col-md-10">
            @Html.TextBoxFor(model => model.TeamName, new { htmlAttributes = new { @class = "form-control" }, @readonly = "readonly" })
            @Html.ValidationMessageFor(model => model.TeamName, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.MemberId, htmlAttributes: new { @class = " col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.MemberId,
            new SelectList(ViewBag.Users, "Id", "UserName"),
            "Select Member",
                    new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.MemberId, "", new { @class = "text-danger" })
        </div>
    </div>



    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index",new{id=Model.TeamId},null)
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
